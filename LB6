// try creating a json object variable for a book. The book should have a title, description,author, and numofpages

let book = {
    title: "The Hitchhiker's Guide to the Galaxy",
    description:"The Adventures of the only man to survive the destruction of Earth",
    author:"Douglas Adams",
    numPages: 216
}
//try printing the property values in your console individually
console.log(book.title)
console.log(book.description)
console.log(book.author)
console.log(book.numPages)

//update the description of the book
book.description = "Seconds before earth is being dmolished to make way for the galactic freeway, Authur is plucked off the planet"
console.log(book.description)

